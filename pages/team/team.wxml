<!--pages/team/team.wxml-->
<view style='background-color: rgb(215, 215, 215);'>
<view style='float:right;padding:30rpx'>{{time}}</view>
<view style='padding:30rpx'>{{address}}</view>
<view style='padding:30rpx'>天气：{{weather.weather.data}}</view>
<view style='padding:30rpx'>温度：{{weather.temperature.data}}°</view>
<view style='padding:30rpx'>湿度：{{weather.humidity.data}}</view>
<view style='padding:30rpx'>风向：{{weather.winddirection.data}}</view>
<view style='padding:30rpx'>风力：{{weather.windpower.data}}</view>
</view>
 
<view>
<view  style="display:flex;padding:15rpx 80rpx;align-items: center;justify-content: center;">
<image style="height: 70rpx;width: 70rpx;" src ='../images/front1.jpg'></image>
<text class = " {{code == 1 ?'nodownbtn':'downbtn'}}" decode="{{true}}" bindtap='myTeam'>  {{teamName}} &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; {{allUser}}{{code == 1 ?'':'人'}} </text> 
<image style="float:right;height: 70rpx;width: 70rpx;" bindtap='myTeam' src ='../images/right.png'></image>
</view>
<view class="{{code == 1?'hide':'show'}}" style="display:flex;align-items: center;justify-content: center;">
<text  bindtap='myTeam' >  {{start}} {{code == 1?'':'-'}} {{end}} </text> 
</view>
</view>

<view style='background-color: rgb(242, 242, 242);height: 200px;'>
<view style="padding:15rpx"> 
<button class = " {{code == 1 ?'btn2':'btn1'}}" bindtap='addTeam'>{{code == 1 ?'创建队伍':'编辑队伍'}}  </button> 
</view>
