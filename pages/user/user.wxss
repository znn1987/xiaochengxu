/* pages/user/user.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: right;
}

.userinfo-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 4rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  align-items: left;
}

.hide {
  display: none;
}
 
.show {
  display: block;
}