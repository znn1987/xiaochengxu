<!--pages/addTeam/addTeam.wxml-->

<view class="itemView"  style="display:flex;padding:10rpx 30rpx">
    <label>团队名称：</label>
    <input class="input" name="teamName" placeholder="请输入团队名称" value='{{teamName}}'
    bindinput ="teamNameInput"/>
  </view>
<view class="">
  <view class="" style="display:flex;padding:10rpx 30rpx;justify-content:space-between;">
  <view>
  开始时间：
  </view>
  <view style="display:flex;">
    <picker mode="date" value="{{dateStart}}" start="2019-01-01" end="2099-12-31" bindchange="bindDateStartChange">
    {{dateStart}}
  </picker>
  <image style="float:right;height: 50rpx;width: 50rpx;" bindchange="bindDateStartChange" src ='../images/right.png'></image>
  </view>
  </view>
</view>
<view class="">
  <view class=""  style="display:flex;padding:10rpx 30rpx;justify-content:space-between;">
  <view>
  结束时间：
  </view>
  <view style="display:flex;">
    <picker mode="date" value="{{dateEnd}}" start="2019-01-01" end="2099-12-31" bindchange="bindDateEndChange">
    {{dateEnd}}
  </picker>
  <image style="float:right;height: 50rpx;width: 50rpx;" bindchange="bindDateEndChange" src ='../images/right.png'></image>
  </view>
  </view>
</view>
<view style="display:flex;"> 
<button class="btn1" bindtap="deleteBtn"> 删除队伍 </button>
<button class="btn2" bindtap="creatBtn"> 保存队伍 </button> 


</view>
